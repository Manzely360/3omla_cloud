# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/coinmatcher
REDIS_URL=redis://localhost:6379

# Binance API Configuration
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key
BINANCE_TESTNET=false

# Bybit API Configuration
BYBIT_API_KEY=your_bybit_api_key
BYBIT_SECRET_KEY=your_bybit_secret_key
BYBIT_TESTNET=false

# CoinMarketCap API
CMC_API_KEY=your_cmc_api_key

# Application Configuration
SECRET_KEY=your-secret-key-here
DEBUG=true
ENVIRONMENT=development

# Auth Cookies
ACCESS_TOKEN_COOKIE_NAME=3omla_access_token
ACCESS_TOKEN_COOKIE_DOMAIN=
ACCESS_TOKEN_COOKIE_SECURE=false
ACCESS_TOKEN_COOKIE_SAMESITE=lax

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_URL=http://localhost:3000

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_RECONNECT_DELAY=5
MARKET_DATA_CHANNEL=market_data_updates
EXCHANGE_STATUS_CHANNEL=exchange_status_updates

# Analytics Configuration
CORRELATION_WINDOWS=5m,15m,1h,4h,1d
LEAD_LAG_MAX_LAG=60
MIN_CORRELATION_THRESHOLD=0.3
MIN_HIT_RATE_THRESHOLD=0.6

# Risk Management
MAX_POSITION_SIZE=0.1
MAX_DAILY_LOSS=0.05
COOLDOWN_AFTER_LOSSES=3

# Feature Flags
ENABLE_WHALE_ANALYSIS=true
ENABLE_REGIME_DETECTION=true
ENABLE_SPOOF_DETECTION=true

# Remote Access Links
# Public URL base used for generated share links (defaults to FRONTEND_URL if blank)
REMOTE_ACCESS_BASE_URL=
# Maximum minutes a link can remain valid (default 1440 = 24h)
REMOTE_ACCESS_MAX_MINUTES=1440
# Maximum number of uses allowed when creating a link (default 20)
REMOTE_ACCESS_MAX_USES=20
# Default path users land on after exchanging a remote token
REMOTE_ACCESS_DEFAULT_FORWARD=/

# Networking
# Comma-separated list of allowed hosts for backend (TrustedHostMiddleware)
# Use '*' for development and docker compose networks
ALLOWED_HOSTS=*
