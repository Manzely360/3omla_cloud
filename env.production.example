# 3OMLA Production Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
POSTGRES_DB=3omla_production
POSTGRES_USER=3omla_user
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://3omla_user:your_secure_postgres_password_here@localhost:5432/3omla_production

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your_very_secure_secret_key_here_change_this_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Auth Cookies
ACCESS_TOKEN_COOKIE_NAME=3omla_access_token
ACCESS_TOKEN_COOKIE_DOMAIN=.3omla.com
ACCESS_TOKEN_COOKIE_SECURE=true
ACCESS_TOKEN_COOKIE_SAMESITE=strict

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://3omla-backend.railway.app
NEXT_PUBLIC_WS_URL=wss://3omla-backend.railway.app
MARKET_DATA_CHANNEL=market_data_updates
EXCHANGE_STATUS_CHANNEL=exchange_status_updates

# Exchange API Keys (Optional - for trading features)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TESTNET=false
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_SECRET_KEY=your_bybit_secret_key_here
KUCOIN_API_KEY=your_kucoin_api_key_here
KUCOIN_SECRET_KEY=your_kucoin_secret_key_here
KUCOIN_PASSPHRASE=your_kucoin_passphrase_here

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password_here

# Deployment Tokens
RAILWAY_TOKEN=your_railway_token_here
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_vercel_org_id_here
VERCEL_PROJECT_ID=your_vercel_project_id_here
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here

# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# CORS Configuration
ALLOWED_ORIGINS=https://3omla.vercel.app,https://www.3omla.com
ALLOWED_HOSTS=3omla.com,www.3omla.com,api.3omla.com

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Feature Flags
ENABLE_TRADING=true
ENABLE_ANALYTICS=true
ENABLE_SIGNALS=true
ENABLE_NOTIFICATIONS=true
ENABLE_MONITORING=true

# Performance
MAX_WORKERS=4
WORKER_TIMEOUT=30
CACHE_TTL=300

# Security Headers
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' wss: https:;"
HSTS_MAX_AGE=31536000

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Alerting
ALERT_EMAIL=alerts@3omla.com
ALERT_SLACK_CHANNEL=#alerts
ALERT_THRESHOLD_ERROR_RATE=0.05
ALERT_THRESHOLD_RESPONSE_TIME=2000
